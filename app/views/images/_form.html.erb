
<%= bootstrap_form_for(@image, layout: :horizontal) do |f| %>
  <%= f.text_field :bibid, control_col: "col-sm-3" %>
  <%= f.text_field :pub_info %>
  <%= f.text_area :title, rows: "3" %>
  <%= f.text_area :publisher %>
  <%= f.text_area :author %>
  <%= f.text_area :description, rows: "4" %>
  <hr>
  <%= f.primary "Save"%>
  <%= link_to('Cancel', images_path, :class => 'btn btn-default', :role => "button")%>
<% end %>
