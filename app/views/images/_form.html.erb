
<%= bootstrap_form_for(@image, layout: :horizontal) do |f| %>
  <%= f.static_control :ark, label: "ARK" %>
  <%= f.text_field :image_id, control_col: "col-sm-3", label: "ImageID" %>
  <%= f.text_field :bib_id, control_col: "col-sm-3", label: "BibID" %>
  <%= f.form_group :copyright, label: { text: "Copyrighted" } do %>
    <%= f.check_box :copyright, label: "" %>
  <% end %>
  <%= f.select :access, [ ["Campus","campus"], ["Public","public"], [ "Private","private" ] ], { class: "selectpicker" } %>
  <%= f.text_area :title, rows: "3" %>
  <%= f.text_area :publisher %>
  <%= f.text_field :pub_info, label: "Pub Info" %>
  <%= f.date_field :pub_date, label: "Pub Date" %>
  <%= f.text_area :author %>
  <%= f.text_area :description, rows: "4" %>
  <%= f.text_area :bbox, label: "BBBOX (W,S,E,N)" %>
  <hr>
  <%= f.primary "Save"%>
  <%= link_to('Cancel', images_path, :class => 'btn btn-default', :role => "button")%>
<% end %>
