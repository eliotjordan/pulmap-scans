<p id="notice"><%= notice %></p>

<h1>Listing Images</h1>

<table>
  <thead>
    <tr>
      <th>Ark</th>
      <th>Bibid</th>
      <th>Title</th>
      <th>Publisher</th>
      <th>Author</th>
      <th>Year</th>
      <th>Description</th>
      <th>Add date</th>
      <th>Upd date</th>
      <th>Copyright</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td><%= image.ark %></td>
        <td><%= image.bibid %></td>
        <td><%= image.title %></td>
        <td><%= image.publisher %></td>
        <td><%= image.author %></td>
        <td><%= image.year %></td>
        <td><%= image.description %></td>
        <td><%= image.add_date %></td>
        <td><%= image.upd_date %></td>
        <td><%= image.copyright %></td>
        <td><%= link_to 'Show', image %></td>
        <td><%= link_to 'Edit', edit_image_path(image) %></td>
        <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

